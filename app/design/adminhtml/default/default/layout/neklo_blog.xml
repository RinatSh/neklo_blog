<?xml version="1.0"?>

<layout>
    <adminhtml_news_index>
        <reference name="content">
            <block type="neklo_blog/adminhtml_news" name="news" />
        </reference>
    </adminhtml_news_index>

    <adminhtml_news_grid>
        <block type="neklo_blog/adminhtml_news_grid" name="root"/>
    </adminhtml_news_grid>

    <adminhtml_news_new>
        <update handle="adminhtml_news_edit" />
    </adminhtml_news_new>

    <adminhtml_news_edit>
        <update handle="editor"/>
        <reference name="content">
            <block type="neklo_blog/adminhtml_news_edit" name="news_edit" />
        </reference>
        <reference name="left">
            <block type="neklo_blog/adminhtml_news_edit_tabs" name="news_edit_tabs">
                <block type="neklo_blog/adminhtml_news_edit_tab_main" name="news_edit_tab_main" />
                <block type="neklo_blog/adminhtml_news_edit_tab_content" name="news_edit_tab_content" />
                <block type="neklo_blog/adminhtml_news_edit_tab_short" name="news_edit_tab_short" />
                <action method="addTab"><name>main_section</name><block>news_edit_tab_main</block></action>
                <action method="addTab"><name>content_section</name><block>news_edit_tab_content</block></action>
                <action method="addTab"><name>short_section</name><block>news_edit_tab_short</block></action>
            </block>
        </reference>
    </adminhtml_news_edit>

    <adminhtml_category_index>
        <reference name="content">
            <block type="neklo_blog/adminhtml_category" name="category" />
        </reference>
    </adminhtml_category_index>

    <adminhtml_category_grid>
        <block type="neklo_blog/adminhtml_category_grid" name="root" />
    </adminhtml_category_grid>


    <adminhtml_category_edit>
        <update handle="editor" />

        <reference name="content">
            <block type="neklo_blog/adminhtml_category_edit" name="category_edit"/>
        </reference>

    </adminhtml_category_edit>

</layout>